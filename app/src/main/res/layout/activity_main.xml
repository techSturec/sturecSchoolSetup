<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Update profile"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"/>

    <EditText
        android:id="@+id/profile_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:autofillHints="emailAddress"
        android:layout_below="@+id/profile_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputs_background"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/profile_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:autofillHints="emailAddress"
        android:layout_below="@+id/profile_email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputs_background"
        android:hint="Password"
        android:inputType="textEmailAddress"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/profile_schoolName"
        android:layout_width="match_parent"
        android:inputType="text"
        android:layout_height="48dp"
        android:layout_below="@+id/profile_password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputs_background"
        android:hint="School Name"
        android:padding="10dp"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/profile_city"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="text"
        android:autofillHints="no"
        android:layout_below="@+id/profile_schoolName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputs_background"
        android:hint="City"
        android:padding="10dp"/>


    <EditText
        android:id="@+id/profile_address"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/profile_city"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:autofillHints="no"
        android:inputType="textPostalAddress"
        android:background="@drawable/inputs_background"
        android:hint="address"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/profile_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/profile_address"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputs_background"
        android:hint="Enter multiple phone numbers"
        android:autofillHints="no"
        android:inputType="phone"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/profile_telephoneNumber"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/profile_phoneNumber"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputs_background"
        android:hint="Enter multiple Telephone numbers"
        android:autofillHints="no"
        android:inputType="phone"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/profile_schoolCode"
        android:layout_width="143dp"
        android:layout_height="48dp"
        android:layout_below="@+id/profile_telephoneNumber"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:autofillHints="no"
        android:inputType="text"
        android:background="@drawable/inputs_background"
        android:hint="School Code"
        android:padding="10dp"/>

    <Button
        android:id="@+id/profile_saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_schoolCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:height="@android:dimen/app_icon_size"
        android:shadowColor="@color/black"
        android:text="save information"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />

</RelativeLayout>